%h1.text-center= @facility.name

.row
  .col-md-6
    .facility-graph.draw-xaxis.draw-yaxis{:"facility-id"=>@facility.id}
  .col-md-6
    .panel.panel-default
      .panel-body
        .row
          %b.col-md-4.text-right Name:
          .col-md-8= @facility.name
        .row
          %b.col-md-4.text-right Washers in use:
          .col-md-8
            = @facility.last_submission.washers.to_s + "%"
            of
            = @facility.washers
        .row
          %b.col-md-4.text-right Driers in use:
          .col-md-8
            = @facility.last_submission.driers.to_s + "%"
            of
            = @facility.driers
        .row
          %b.col-md-4.text-right Reported By:
          .col-md-8
            = render 'shared/username', user: @facility.last_submission.user
        .row
          .col-md-11.col-md-offset-1
            %small
              = time_ago_in_words(@facility.last_submission.created_at)
              ago
        .row
          .col-md-12
            .btn-group
              - if can? :create, Submission
                = link_to "New Submission",
                          new_facility_submission_path(@facility),
                          class: "btn btn-primary"
              - if can? :read, Submission
                = link_to "Show Submissions",
                          facility_submissions_path(@facility),
                          class: "btn btn-default"

.btn-group
  - if can? :update, @facility
    = link_to 'Edit', edit_facility_path(@facility), class: "btn btn-default"
  - if can? :destroy, @facility
    = link_to 'Destroy', facility_path(@facility),
      :method => :delete,
      :data => { :confirm => 'Are you sure?' },
      class: "btn btn-default"
  - if can? :read, Facility
    = link_to 'Show All', facilities_path, class: "btn btn-default"
