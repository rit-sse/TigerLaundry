= form_for [@facility, @submission], html: {class: "form-horizontal"} do |f|
  - if @submission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@submission.errors.count, "error")} prohibited this submission from being saved:"
      %ul
        - @submission.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :facility_id, value: @facility.id
  .form-group
    = f.label :washers, class: "control-label col-md-2"
    .col-md-6
      = f.number_field :washers, class: "tl-slider tl-slider-machinestatus", :"value-holder" => "#washersSliderValHolder"
    .col-md-4
      -# value of the slider is inserted into this span
      %span#washersSliderValHolder.tl-slider-value> 0
      \% full
  .form-group
    = f.label :driers, class: "control-label col-md-2"
    .col-md-6
      = f.number_field :driers, class: "tl-slider tl-slider-machinestatus", :"value-holder" => "#driersSliderValHolder"
    .col-md-4
      -# value of the slider is inserted into this span
      %span#driersSliderValHolder.tl-slider-value> 0
      \% full
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit 'Save', class: "btn btn-primary"
